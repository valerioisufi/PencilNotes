<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/viewFolder"
        motion:constraintSetStart="@id/viewHome"
        motion:duration="400">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/viewHome">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/viewFolder">
        <Constraint
            android:id="@+id/guidelineViewEnd"
            motion:layout_constraintGuide_percent="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ConstraintSet>
</MotionScene>