<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/folder_active"
        motion:constraintSetStart="@id/home_active"
        motion:duration="250"
        motion:motionInterpolator="easeOut">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/disactive_background" />
    </Transition>

    <ConstraintSet android:id="@+id/home_active">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/folder_active">
        <Constraint
            android:id="@+id/disactive_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toStartOf="@id/folderText"
            android:layout_marginEnd="16dp" />
        <Constraint
            android:id="@+id/active_background"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/homeText"
            android:layout_marginStart="16dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/folder_active"
        motion:constraintSetEnd="@+id/home_active"
        motion:duration="250"
        motion:motionInterpolator="easeOut">
        <OnClick motion:targetId="@+id/disactive_background" />
    </Transition>
</MotionScene>