<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFileNotes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageFileNotes"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:paddingHorizontal="32dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/post_it" />

    <TextView
        android:id="@+id/titoloFileNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sottotitoloFileNotes"
        app:layout_constraintEnd_toEndOf="@+id/sottotitoloFileNotes"
        app:layout_constraintStart_toStartOf="@+id/sottotitoloFileNotes"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/sottotitoloFileNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFileNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageFileNotes"
        app:layout_constraintTop_toTopOf="@+id/imageFileNotes" />

    <TextView
        android:id="@+id/dataCreazioneFileNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/sottotitoloFileNotes"
        app:layout_constraintStart_toStartOf="@+id/sottotitoloFileNotes"
        app:layout_constraintTop_toBottomOf="@+id/sottotitoloFileNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>